<p id="notice"><%= notice %></p>
<%= link_to 'New Aluno', new_aluno_path , class: "btn btn-default"%>
<h1 class="text-center text-info">Alunos</h1>
<div class="row text-center">
      <%= link_to new_aluno_url, class: "btn btn-default" do %>
          <i class="glyphicon glyphicon-plus"></i> Novo Aluno
      <% end %>
      <br>
      <br>
</div>
<div class="row">
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Nome do Aluno</th>
      <th>Instituição</th>
      <th>Nota</th>
      <th>Curso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
        <td><%= aluno.nome_aluno %></td>
        <td><%= aluno.instituicao_id %></td>
        <td><%= aluno.nota_aluno %></td>
        <td><%= aluno.curso %></td>
        <td><%= link_to 'Show', aluno %></td>
        <td><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Remover', aluno, method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta nota?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
